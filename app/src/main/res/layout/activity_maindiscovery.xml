<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.myown.project.stage1movieapp.MainDiscoveryActivity">

    <GridView
        android:id="@+id/movies_gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnWidth="@dimen/gridview_column_width"
        android:numColumns="auto_fit"
        android:padding="@dimen/default_padding"
        android:verticalSpacing="@dimen/gridview_spacing"
        android:horizontalSpacing="@dimen/gridview_spacing"
        android:stretchMode="columnWidth"
        android:gravity="center"
        />

    <ProgressBar
        android:id="@+id/movies_loading_progress"
        android:visibility="invisible"
        android:layout_height="@dimen/progress_bar_height_width"
        android:layout_width="@dimen/progress_bar_height_width"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/movies_loading_textview"
        android:visibility="invisible"
        android:textSize="@dimen/default_text_size"
        android:layout_gravity="center"
        android:text="@string/loading_movies_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>
